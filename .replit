modules = ["web"]

[nix]
channel = "stable-25_05"
packages = ["git", "flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Finance App"

[[workflows.workflow]]
name = "Finance App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd finance_app && flutter run -d web-server --web-port 5000 --web-hostname 0.0.0.0 --target=lib/main_simple.dart"
waitForPort = 5000

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33245
externalPort = 3000

[[ports]]
localPort = 37315
externalPort = 3002

[[ports]]
localPort = 38567
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["flutter", "run", "-d", "web-server", "--web-port", "5000", "--web-hostname", "0.0.0.0", "--release"]
build = ["flutter", "build", "web", "--release"]
